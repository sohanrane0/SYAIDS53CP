#include <iostream>
#include <sstream>
#include <string>
using namespace std;
int main() 
{
    string s;
    cout << "Enter a string: ";
    getline(cin, s);
    stringstream ss(s);
    string word;
    int count = 0;
    while (ss >> word) 
    {
        count++;
    }
    cout << "Number of words: " << count << endl;
    return 0;
}
