#include <iostream>
using namespace std;
int main() {
    int N, n;
    cout << "Enter number N: ";
    cin >> N;
    cout << "Enter bit position n: ";
    cin >> n;
    if ((N & (1 << n)) != 0)
        cout << "Bit at position " << n << " is SET." << endl;
    else
        cout << "Bit at position " << n << " is CLEAR." << endl;
    return 0;
}
O(1)
